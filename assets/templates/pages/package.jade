h1
  | { 'PACKAGE.DETAIL' | translate:{package:package.name} }}
button.btn.btn-primary.btn-md(type="button", title="translate:{PACKAGES:UPGRADE}", ng-click="upgrade")
  span.fa.fa-fw.fa-arrow-circle-up
  span translate:{PACKAGES:UPGRADE}
.packages-list
  ul.list-group
    li.list-group-item(ng-repeat="package in packages")
      .row.package
        .col-md-1
          img.img-responsive(ng-src="{{typeImage(package.type)}}")
        .col-md-7
          strong
            a(href="#packages/{{package.name}}") {{package.description}}
          small  [{{package.name}}]
        .col-md-2
          span.label(ng-class="versionToClass(package.version)") {{package.version}}
          | &nbsp;
          span.label(ng-class="versionToClass(package.upgrade_version)", ng-if="!package.locked && package.upgrade_version")
            span.fa.fa-arrow-circle-up
            | {{package.upgrade_version}}
        .col-md-2.text-right
          .actions
            .btn-group(role="group")
              button.btn.btn-primary.btn-md(type="button", title="{{ 'PACKAGES.UPGRADE_SELECTED' | translate:{package:package.name} }}, ng-if="!package.locked && (package.version!=package.upgrade_version)", ng-click="upgrade(pack)")
                span.fa.fa-fw.fa-arrow-circle-up
                span.sr-only { 'PACKAGES.UPGRADE_SELECTED' | translate:{package:package.name} }}
              button.btn.btn-info.btn-md(type="button", title="{{ 'PACKAGES.LOCK_SELECTED' | translate:{package:package.name,package:package.version} }}", ng-if="!package.locked", ng-click="lock(pack)")
                span.fa.fa-fw.fa-unlock
                span.sr-only {{ 'PACKAGES.LOCK_SELECTED' | translate:{package:package.name} }}
              button.btn.btn-warning.btn-md(type="button", title="{{ 'PACKAGES.UNLOCK_SELECTED' | translate:{package:package.name,package:package.version} }}", ng-if="package.locked", ng-click="unlock(pack)")
                span.fa.fa-fw.fa-lock
                span.sr-only {{ 'PACKAGES.UNLOCK_SELECTED' | translate:{package:package.name} }}
              button.btn.btn-danger.btn-md(type="button", title="{{ 'PACKAGES.REMOVE_SELECTED' | translate:{package:package.name} }}", ng-if="!package.locked && package.constraint", ng-click="remove(pack)")
                span.fa.fa-fw.fa-trash-o
                span.sr-only {{ 'PACKAGES.REMOVE_SELECTED' | translate:{package:package.name} }}
button.btn.btn-primary.btn-md(type="button", title="translate:{PACKAGES:UPDATE}", ng-click="upgrade")
  span.fa.fa-fw.fa-arrow-circle-up
  span translate:{PACKAGES:UPGRADE}